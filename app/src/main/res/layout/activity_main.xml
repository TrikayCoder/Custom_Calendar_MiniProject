<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:gravity="center"
    tools:context=".MainActivity">
        <include
            layout="@layout/layout_bg_caledar"/>
        <RelativeLayout
            android:layout_width="333dp"
            android:layout_height="230dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="left">

                        <TextView
                            android:id="@+id/txtMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="20sp"
                            android:text="November"
                            android:textColor="@color/Fresh_Guacamole_03"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/txtYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="2022"
                            android:textColor="@color/Fresh_Guacamole_03"
                            android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="right">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvBtnToday"
                            android:layout_width="62dp"
                            android:layout_height="20.38dp"
                            app:cardBackgroundColor="@color/Fresh_Guacamole_04"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/inter_medium"
                                            android:textSize="11sp"
                                            android:textColor="@color/white"
                                            android:text="Today"
                                            android:gravity="center"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="48dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:text="SUN"
                                    android:textColor="@color/Fresh_Guacamole_03"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:text="SUN"
                                    android:textColor="#4D000000"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:text="SUN"
                                    android:textColor="#4D000000"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:text="SUN"
                                    android:textColor="#4D000000"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:text="SUN"
                                    android:textColor="#4D000000"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:text="SUN"
                                    android:textColor="#4D000000"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:textSize="11sp"
                                    android:textColor="@color/Fresh_Guacamole_03"
                                    android:text="SUN"
                                    android:textAlignment="center"
                                    android:layout_weight="1"/>
                        </LinearLayout>
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/vpCalendarCells"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
        </RelativeLayout>
</RelativeLayout>